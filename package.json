{
  "name": "frost-api",
  "version": "0.0.1",
  "description": "Frost API Server",
  "private": true,
  "main": "./built/index.js",
  "scripts": {
    "install": "npm run rebuild",
    "start": "node ./",
    "setup": "node ./ --setup",
    "build:copy": "cpx \"src/**/*.js\" built",
    "build": "npm run build:copy",
    "clean": "rimraf ./built",
    "rebuild": "npm run clean && npm run build",
    "test:lint": "eslint ./built/**/*.js",
    "test:mocha": "mocha",
    "test": "npm run test:lint && npm run test:mocha"
  },
  "author": "team FrostDevelop",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.16.1",
    "commander": "^2.9.0",
    "cpx": "^1.5.0",
    "express": "^4.14.1",
    "methods": "^1.1.2",
    "moment": "^2.18.0",
    "mongo-sanitize": "^1.0.0",
    "mongodb": "^2.2.24",
    "redis": "^2.7.0",
    "request": "^2.81.0",
    "rimraf": "^2.6.1"
  },
  "devDependencies": {
    "eslint": "^3.18.0",
    "eslint-config-standard": "^7.1.0",
    "eslint-plugin-node": "^4.2.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^2.1.1",
    "mocha": "^3.2.0"
  },
  "files": [
    "*"
  ]
}
